<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="200dp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:orientation="vertical">
        <TextView
            android:id="@+id/dialer_status"
            android:padding="12dp"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="idle..."/>

        <EditText
            android:id="@+id/numb_field"
            android:gravity="center|bottom"
            android:background="@color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:inputType="phone"
            android:maxLines="1"
            android:maxLength="14"
            android:cursorVisible="false"
            android:text="14035011553"/>

    </LinearLayout>

    <LinearLayout
        android:paddingVertical="12dp"
        android:gravity="bottom"
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                style="@style/Widget.AppCompat.Button.FlatImage"
                android:id="@+id/btn1"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="32sp" />
            <Button
                android:drawablePadding="5dp"
                style="@style/Widget.AppCompat.Button.FlatImage"
                android:id="@+id/btn2"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="wrap_content"
                android:text="2"
                android:drawableBottom="@drawable/ic_baseline_voicemail_16"
                android:textSize="32sp" />
            <Button
                android:id="@+id/btn3"
                style="@style/Widget.AppCompat.Button.FlatImage"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="wrap_content"
                android:drawableBottom="@drawable/ic_baseline_voicemail_16"
                android:text="3"
                android:textSize="32sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                style="@style/Widget.AppCompat.Button.FlatImage"
                android:id="@+id/btn4"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="wrap_content"
                android:drawableBottom="@drawable/ic_baseline_voicemail_16"
                android:text="4"
                android:textSize="32sp" />
            <Button
                style="@style/Widget.AppCompat.Button.FlatImage"
                android:id="@+id/btn5"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="wrap_content"
                android:text="5"
                android:drawableBottom="@drawable/ic_baseline_voicemail_16"
                android:textSize="32sp" />
            <Button
                android:id="@+id/btn6"
                style="@style/Widget.AppCompat.Button.FlatImage"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="wrap_content"
                android:drawableBottom="@drawable/ic_baseline_voicemail_16"
                android:text="6"
                android:textSize="32sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                style="@style/Widget.AppCompat.Button.FlatImage"
                android:id="@+id/btn7"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="wrap_content"
                android:drawableBottom="@drawable/ic_baseline_voicemail_16"
                android:text="7"
                android:textSize="32sp" />
            <Button
                style="@style/Widget.AppCompat.Button.FlatImage"
                android:id="@+id/btn8"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="wrap_content"
                android:text="8"
                android:drawableBottom="@drawable/ic_baseline_voicemail_16"
                android:textSize="32sp" />
            <Button
                android:id="@+id/btn9"
                style="@style/Widget.AppCompat.Button.FlatImage"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="wrap_content"
                android:drawableBottom="@drawable/ic_baseline_voicemail_16"
                android:text="9"
                android:textSize="32sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                style="@style/Widget.AppCompat.Button.FlatImage"
                android:id="@+id/btnT"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="wrap_content"
                android:text="*"
                android:textSize="32sp" />
            <Button
                style="@style/Widget.AppCompat.Button.FlatImage"
                android:id="@+id/btn0"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="wrap_content"
                android:text="0"
                android:drawableBottom="@drawable/ic_baseline_voicemail_16"
                android:textSize="32sp" />
            <Button
                android:id="@+id/btnS"
                style="@style/Widget.AppCompat.Button.FlatImage"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="wrap_content"
                android:text="#"
                android:textSize="32sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/btn_video_call"
                style="@style/Widget.AppCompat.Button.FlatImage"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:scaleY="0.6"
                android:scaleX="0.6"
                android:src="@drawable/ic_baseline_videocam_24"/>
            <ImageButton
                android:id="@+id/btn_voice_call"
                style="@style/Widget.AppCompat.Button.FlatImage"
                android:padding="0dp"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_call_24"
                android:scaleType="fitCenter"/>
            <ImageButton
                android:id="@+id/btn_erase"
                android:padding="0dp"
                style="@style/Widget.AppCompat.Button.FlatImage"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:scaleY="0.4"
                android:scaleX="0.4"
                android:src="@drawable/ic_baseline_backspace_24"/>
        </LinearLayout>




    </LinearLayout>
</RelativeLayout>
























