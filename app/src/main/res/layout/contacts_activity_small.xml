                <RadioGroup
                    android:id="@+id/list_selector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/list_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="?android:attr/listChoiceIndicatorMultiple"
                        android:checked="true"
                        android:text="Scan All" />

                    <RadioButton
                        android:id="@+id/list_custom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="?android:attr/listChoiceIndicatorMultiple"
                        android:checked="false"
                        android:text="Custom List" />
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/list_custom_selector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="15dp"
                android:visibility="gone">

                <CheckBox
                    android:button="@null"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Country Code:" />

                <EditText
                    android:id="@+id/country_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="true"
                    android:imeOptions="actionDone"
                    android:inputType="phone"
                    android:maxLength="6"
                    android:minWidth="100dp"
                    android:text="972" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1" />

                <TextView
                    android:id="@+id/selected_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="10dp"
                    android:text="0" />

            </LinearLayout>


            <View
