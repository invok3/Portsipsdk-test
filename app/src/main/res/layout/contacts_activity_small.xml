                    <!--                        android:longClickable="true"-->
                    <!--                        android:text="27825437000" />-->


                </LinearLayout>
            </ScrollView>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black" />

        <TextView
            android:id="@+id/process"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="15dp"
            android:paddingVertical="5dp"
            android:text="Idle.."
            android:textColor="?attr/colorPrimaryVariant" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:gravity="center">

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1" />

            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/main_control"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleSelection="true">

                <Button
                    android:id="@+id/pauseButton"
                    style="@style/Widget.App.Button.OutlinedButton.IconOnly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="pause"
                    app:icon="@drawable/ic_baseline_pause_24" />

                <Button
                    android:id="@+id/playButton"
                    style="@style/Widget.App.Button.OutlinedButton.IconOnly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="play"
                    app:icon="@drawable/ic_baseline_play_arrow_24" />

                <Button
                    android:id="@+id/stopButton"
                    style="@style/Widget.App.Button.OutlinedButton.IconOnly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="stop"
                    app:icon="@drawable/ic_baseline_stop_24" />

            </com.google.android.material.button.MaterialButtonToggleGroup>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1" />


            <com.google.android.material.button.MaterialButtonToggleGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleSelection="false">

                <Button
                    android:id="@+id/saveButton"
                    style="@style/Widget.App.Button.OutlinedButton.IconOnlyAmber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="manageAccounts"
                    app:icon="@drawable/ic_baseline_manage_accounts_24" />

                <Button
                    android:id="@+id/userButton"
                    style="@style/Widget.App.Button.OutlinedButton.IconOnlyAmber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="dialPad"
                    app:icon="@drawable/ic_outline_dialpad_24" />

                <Button
                    android:id="@+id/addButton"
                    style="@style/Widget.App.Button.OutlinedButton.IconOnlyAmber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="addRouteSelectAccount"
                    app:icon="@drawable/ic_baseline_add_circle_24" />

            </com.google.android.material.button.MaterialButtonToggleGroup>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/auto_pilot_dialer"
                android:textColor="@color/amber_500" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/v0_1" />
        </LinearLayout>


