                <GridLayout
                    android:paddingHorizontal="10dp"
                    android:id="@+id/advanced_codecs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="3"
                    android:visibility="visible">



                    <CheckBox
                        android:id="@+id/PCMA"
                        android:layout_columnWeight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="PCMA" />

                    <CheckBox
                        android:id="@+id/PCMU"
                        android:layout_columnWeight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="PCMU" />

                    <CheckBox android:id="@+id/toggle_advanced_codecs_button"
                        android:layout_columnWeight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="toggleAdvancedCodecs"
                        android:button="@null"
                        android:text="@string/more"
                        android:drawableEnd="@drawable/ic_baseline_expand_more_24" />

                    <CheckBox
                        android:id="@+id/G729"
                        android:visibility="gone"
                        android:layout_columnWeight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="@string/g729" />

                    <!-- <ImageButton
                        android:layout_columnWeight="1"
                        android:id="@+id/toggle_advanced_codecs_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/bordershape"
                        android:onClick="toggleAdvancedCodecs"
                        android:src="@drawable/ic_baseline_expand_more_24" /> -->




                    <CheckBox
                        android:layout_columnWeight="1"
                        android:visibility="gone"
                        android:id="@+id/GSM"
                        android:checked="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/gsm" />

                    <CheckBox
                        android:layout_columnWeight="1"
                        android:visibility="gone"
                        android:id="@+id/iLBC"
                        android:checked="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ilbc" />

                    <CheckBox
                        android:layout_columnWeight="1"
                        android:visibility="gone"
                        android:id="@+id/Opus"
                        android:checked="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/opus" />

                    <CheckBox
                        android:layout_columnWeight="1"
                        android:visibility="gone"
                        android:id="@+id/G722"
                        android:checked="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/g722" />

                    <CheckBox
                        android:layout_columnWeight="1"
                        android:visibility="gone"
                        android:id="@+id/DTMF"
                        android:checked="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DTMF" />

                    <CheckBox
                        android:layout_columnWeight="1"
                        android:visibility="gone"
                        android:id="@+id/SPEEX"
                        android:checked="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/speex" />

                    <CheckBox
                        android:layout_columnWeight="1"
                        android:visibility="gone"
                        android:id="@+id/SPEEX_WB"
                        android:checked="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/speex_wb" />

                    <CheckBox
                        android:layout_columnWeight="1"
                        android:visibility="gone"
                        android:id="@+id/AMR"
                        android:checked="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/amr" />

                    <CheckBox
                        android:layout_columnWeight="1"
                        android:visibility="gone"
                        android:id="@+id/AMR_WB"
                        android:checked="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/amr_wb" />

                    <CheckBox
                        android:layout_columnWeight="1"
                        android:visibility="gone"
                        android:id="@+id/ISACWB"
                        android:checked="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ISACWB" />
                    <CheckBox
                        android:layout_columnWeight="1"
                        android:visibility="gone"
                        android:id="@+id/ISACSWB"
                        android:checked="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ISACSWB" />



                </GridLayout>

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:columnCount="2">

                    <CheckBox
                        android:id="@+id/mLateOffer"
                        android:checked="false"
                        android:enabled="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/allow_late_offer" />

                    <CheckBox
                        android:id="@+id/PRACK"
                        android:checked="false"
                        android:enabled="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/prack" />

                </GridLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.03" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/max_lines" />

                    <EditText
                        android:id="@+id/Max_Line"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:hint="@string/max_line"
                        android:inputType="numberDecimal"
                        android:maxLines="1"
                        android:imeOptions="actionDone"
                        android:text="8" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.01" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/call_delay" />

                    <EditText
                        android:id="@+id/Call_Delay"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:hint="@string/call_delay0"
                        android:inputType="numberDecimal"
                        android:maxLines="1"
                        android:imeOptions="actionDone"
                        android:text="10" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.03" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:text="@string/dial_prefix" />

                    <EditText
                        android:id="@+id/Dial_Prefix"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:hint="@string/dial_prefix0"
                        android:inputType="phone"
                        android:maxLines="1"
                        android:imeOptions="actionDone"
                        android:text="00" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3" />

                </LinearLayout>

            </LinearLayout>


            <!--            <ImageButton-->
            <!--                android:id="@+id/toggle_advanced_settings_button"-->
