<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.autopilot">
    <!-- master -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.microphone"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.wifi"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_orange"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_orange_round"
        android:supportsRtl="false"
        android:theme="@style/Theme.AutoPilot"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".PadActivity"
            android:exported="false" />
        <activity
            android:name=".ManageAccounts"
            android:exported="false"
            android:screenOrientation="portrait" />

        <receiver
            android:name=".MyActionReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="ACTION_PAUSE" />
                <action android:name="ACTION_PLAY" />
                <action android:name="ACTION_STOP" />
                <action android:name="ACTION_ADD_CONNECTED" />
                <action android:name="ACTION_ADD_SUCCESS" />
            </intent-filter>
        </receiver>

        <service
            android:name=".SipServiceFG"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".ContactsActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme"
            android:windowSoftInputMode="adjustNothing">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EditAccount"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="ADD_ACCOUNT" />
                <action android:name="EDIT_ACCOUNT" />
                <action android:name="EDIT_DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>